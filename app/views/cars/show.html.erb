<hr>

<%# add review simple form  %>
<%# show review that they posted  %>

  <%= simple_form_for [@car,@review] do |f| %>
    <%= f.input :comment %>
    <%= f.input :rating %>
    <%= f.submit "Send", class: "btn btn-primary" %>
  <% end %>


<% @car.reviews.each do |review| %>
 <p> <%= review.comment %></p>
 <p><%= '⭐️' * review.rating %></p>
<% end %>

<hr>

<% if  @car.favourite.empty?%>
<%= simple_form_for [@car, @favourite] do |f| %>
    <%= f.submit "Add to my garage", class: "btn btn-primary" %>
<% end %>
<% else %>
  <p>this car is already in your garage!</p>
<% end %>


